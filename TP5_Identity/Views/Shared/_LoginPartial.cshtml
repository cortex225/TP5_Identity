@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity.Name!</a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
            </form>
        </li>

        <li class="nav-item">
            @Html.ActionLink("Changer mot de passe", "RecuperationMDP", "Comptes", new { id = UserManager.GetUserId(User) }, new { @class = "nav-link text-light" })
        </li>

    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="Clients" asp-action="Creer">Créer un compte client</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="Comptes" asp-action="Connecter">Se connecter</a>
        </li>
    }
</ul>
